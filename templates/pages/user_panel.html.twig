{% extends 'layouts/layout.html.twig' %}

{% block title %}
Your file panel
{% endblock %}

{% block content %}

    <div class="content container-fluid">

        <div class="row h-100">

            <div class="col-sm-3 p-3 user-sidebar">
                    <h4>Welcome {{app.user.email}}!</h4>
                    <hr size="2">
                    <div id="fileProperties">

                    </div>
                    <div id="fileContent" class="py-2">
                        
                    </div>
            </div>

            <div class="col-sm-9 bg-light text-black p-0">
                <div id="FilesToolbar" class="container-fluid p-1" style="height:50px;">
                    <button id="displayListBtn" class="btn btn-primary mx-2">
                        <i class="bi bi-list-ul"></i>
                        Display files in list
                    </button>
                    <button id="deleteAllBtn" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i>
                        Delete all files
                    </button>
                </div>
                
                <div id="fileBrowser" class="d-flex flex-row-start flex-wrap">
                    <div class="p-4">
                        <form method="post" id="uploadForm" enctype="multipart/form-data">
                            <label for="fileUpload" class="btn btn-primary">
                                Upload files
                            </label>
                            <input id="fileUpload" type="file" name="fileUpload[]" multiple/>
                        </form>
                    </div>
                    {% for file in files %}
                        <div id="{{file.id}}" class="mx-2 file">
                            <i class="bi bi-file-text"></i>
                            <p class="px-1 file-name">{{file.name}}{% if file.extension %}.{{file.extension}}
                            {% else %}
                                {{file.extension}}
                            {% endif %}
                            </p>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>


    </div>


{% endblock %}